<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN" "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite use-query-string="true">

  <rule>
    <from>^/$</from>
    <to>/index.zul</to>
  </rule>

  <rule>
    <from>^/register$</from>
    <to>/pages/register.zul</to>
  </rule>

  <rule>
    <from>^/login$</from>
    <to>/pages/login.zul</to>
  </rule>

  <rule>
    <from>^/about</from>
    <to>/pages/about.zul</to>
  </rule>

  <rule>
    <from>^/cocktails</from>
    <to>/pages/cocktails.zul</to>
  </rule>

</urlrewrite>