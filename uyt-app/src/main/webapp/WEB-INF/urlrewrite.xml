<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN" "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite use-query-string="true">

  <rule>
    <from>^/$</from>
    <to>/index.zul</to>
  </rule>

  <rule>
    <from>^/gallery$</from>
    <to>/pages/gallery.zul</to>
  </rule>

  <rule>
    <from>^/upload$</from>
    <to>/pages/upload.zul</to>
  </rule>

  <rule>
    <from>^/login$</from>
    <to>/pages/login.zul</to>
  </rule>

  <rule>
    <from>^/image?(.*)</from>
    <set name="id">$1</set>
    <to>/pages/image.zul</to>
  </rule>

</urlrewrite>