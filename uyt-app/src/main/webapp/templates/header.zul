<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<xh:div xmlns="native" xmlns:xh="xhtml" xmlns:zul="http://www.zkoss.org/2005/zul" role="header" class="d-block navbar navbar-expand-lg navbar-dark color-hoki"
        viewModel="@id('vm') @init('com.github.uyt.ui.viewmodel.TemplateVm')">
  <div class="container-fluid row mx-2">
    <div class="col-md-2 mx-2">
      <div class="navbar-header p-2">
        <a class="navbar-brand" href="/" >${c:l('common.title')}</a>
      </div>
    </div>
    <div class="col-sm-8 col-md-6 col-lg-5 ml-5 pl-5">
      <div class="input-group">
        <zul:textbox sclass="form-control form-control-sm" type="text" placeholder="${c:l('common.search')}" />
        <div class="input-group-append">
          <button class="btn btn-light btn-sm">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </div>
    </div>
    <div class="col-md-2 mx-3 collapse navbar-collapse" id="navbarMenu">
      <ul class="nav navbar-nav col-xs-4">
        <li>
          <div class="dropdown">
            <button class="btn dropdown-toggle nav-link" type="button" id="dropdownMenuButton"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">${vm.currentLanguage}
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <xh:a class="dropdown-item" href="javascript:;" onClick="@command('doSetLocaleLt')">LT</xh:a>
              <xh:a class="dropdown-item" href="javascript:;" onClick="@command('doSetLocaleEn')">EN</xh:a>
            </div>
          </div>
        </li>
        <li>
          <div class="dropdown">
            <button class="btn dropdown-toggle nav-link" type="button" id="dropdownMenuButton"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">user</button>
            <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href="/register">Registration</a>
              <a class="dropdown-item" href="/login">Login</a>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</xh:div>
